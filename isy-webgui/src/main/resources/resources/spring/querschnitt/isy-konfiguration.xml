<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <!-- Diese Bean enthält die Anwendungskonfiguration, die in der Laufzeit von Betrieb verändert werden können.  -->
    <bean id="konfiguration" class="de.bund.bva.pliscommon.konfiguration.common.impl.ReloadablePropertyKonfiguration">
        <constructor-arg>
            <list>
                <value>/resources/default.properties</value>
                <value>/resources/gui-anwendungsgruppen.properties</value>
                <value>/resources/nachrichten/gui-linksnavigation.properties</value>
                <value>/resources/nachrichten/navigationmenu.properties</value>
                <value>/config/isy-webgui.properties</value>
            </list>
        </constructor-arg>
    </bean>

</beans>
